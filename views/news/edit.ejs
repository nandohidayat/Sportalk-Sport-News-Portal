<% include ../partials/header %>

<section id="feature_category_section" class="feature_category_section single-page section_wrapper">
	<div class="container">   
		<div class="row">
		    <div class="col-md-1"></div>
		   	 <div class="col-md-10">
				<div class="single_content_layout">
				    <div class="add_a_comment">
						<div class="single_media_title text-center"><h2>Edit <%= news.name %></h2></div>
						<div class="comment_form">
							<form class="text-center" action="/<%= news.category %>/<%= news._id %>/<%= news.name %>?_method=PUT" method="POST">
	                            <div class="form-group">
	                                <input type="text" class="form-control" id="inputName" name="news[name]" value="<%= news.name %>">
	                            </div>
	                            <div class="form-group">
	                                <input type="text" class="form-control" id="inputName" name="news[image]" value="<%= news.image %>">
	                            </div>
	                            <div class="form-group comment">
	                                <textarea class="form-control" id="inputComment" name="news[description]"><%= news.description %></textarea>
	                            </div>
                                <div class="form-group">
                                    <select class="form-control" name="news[category]">
                                        <option value="Football">Football</option>
                                        <option value="Boxing">Boxing</option>
                                        <option value="Tennis">Tennis</option>
                                        <option value="NFL">NFL</option>
                                        <option value="Motorsport">Motorsport</option>
                                        <option value="eSport">eSport</option>
                                    </select>
                                </div>
	                            <button type="submit" class="btn btn-submit red">Submit</button>
	                        </form>
                        </div><!--comment_form-->
					</div><!--add_a_comment-->
				   			 
				</div><!--single_content_layout-->
		   	 </div>

		   	<div class="col-md-1"></div>
		</div>
	</div>	   	
</section><!--feature_category_section-->

<% include ../partials/footer %>